<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MotoAPP.Views.CompraMotoView"
             Title="CompraMotoView">
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="15">

            <Label Text="Revisão da Compra" FontSize="24" FontAttributes="Bold"/>

            <Frame Padding="15" BorderColor="Gray" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Usuário Logado:" FontSize="18"/>
                    <Label Text="{Binding UsuarioLogado.Username}" FontSize="16" TextColor="Gray"/>

                    <Label Text="Moto Selecionada:" FontSize="18" Margin="0,10,0,0"/>
                    <Label Text="{Binding MotoParaComprar.Descricao}" FontSize="16" FontAttributes="Bold" TextColor="Gray"/>
                    <Label Text="{Binding MotoParaComprar.Modelo}" FontSize="16" TextColor="Gray"/>
                </VerticalStackLayout>
            </Frame>

            <Label Text="Valor do Consórcio (R$):" FontSize="18" Margin="0,15,0,0"/>
            <Entry Text="{Binding ValorCompra}" 
                   Placeholder="Ex: 10000.00" 
                   Keyboard="Numeric"/>

            <Button Text="Confirmar Compra" 
                    Command="{Binding SalvarCompraCommand}" 
                    BackgroundColor="Green"
                    TextColor="White"
                    Margin="0,20,0,0"/>

            <Button Text="Voltar" 
                    Command="{Binding CommandVoltar}"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>