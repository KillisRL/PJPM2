<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MotoAPP.Views.PrincipalView"
             Title="Tela Principal"
             BackgroundColor="#1E1E1E">
    <ContentPage.Resources>
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#007bff"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="HeightRequest" Value="55"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#444444"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="HeightRequest" Value="50"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout VerticalOptions="Center" Spacing="20" Padding="30">

            <Label Text="Seja Bem-Vindo!"
                   FontSize="36"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"/>

            <Label Text="{Binding NomeUsuarioLogado}"
                   FontAttributes="Bold"
                   FontSize="22"
                   TextColor="#AAAAAA"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>
            <Button Text="Cadastrar Moto"
                    Command="{Binding CommandMotoView}"
                    Style="{StaticResource MenuButton}"/>

            <Button Text="Visualizar Motos"
                    Command="{Binding CommandVisMotoView}"
                    Style="{StaticResource MenuButton}"/>

            <Button Text="Gerenciar ConsÃ³rcios"
                    Command="{Binding CommandGerenciarComprasMoto}"
                    Style="{StaticResource MenuButton}"/>

            <Button Text="Voltar"
                    Command="{Binding CommandVoltar}"
                    Style="{StaticResource SecondaryButton}"
                    Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>